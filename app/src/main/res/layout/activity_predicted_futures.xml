<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictedFuturesActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="348dp"
        android:layout_height="79dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTech"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTechName1"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1 Month Prediction"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtShareAmount1"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3 Month Prediction"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtSharePrice1"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6 Month Prediction"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTechName2"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/defaultTableRow"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtShareAmount2"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/defaultTableRow"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtSharePrice2"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/defaultTableRow"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <Spinner
        android:id="@+id/drpFutureType"
        android:layout_width="303dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Spinner
        android:id="@+id/drpFutureStock"
        android:layout_width="303dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />

    <TextView
        android:id="@+id/lblPredictedFutures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Predicted Futures"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />
</androidx.constraintlayout.widget.ConstraintLayout>